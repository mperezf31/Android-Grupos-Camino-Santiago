<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_chat_1_margin_start"
    android:layout_marginTop="@dimen/item_chat_1_margin_top"
    android:layout_marginEnd="@dimen/item_chat_1_margin_end"
    android:layout_marginBottom="@dimen/item_chat_1_margin_bottom"
    android:background="@drawable/bg_chat_item_1"
    android:orientation="vertical"
    android:padding="@dimen/item_chat_1_padding">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        tools:text="juan@gmail.com" />

    <TextView
        android:id="@+id/tv_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textColor="@color/grey_2"
        android:textSize="@dimen/item_chat_1_tv_date_text_size"
        tools:text="10:12" />

</LinearLayout>